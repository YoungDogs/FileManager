<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<RadioGroup 
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/radiogroup_search">
    <RadioButton android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/radio_currentpath"
        android:id="@+id/radio_currentpath"/>
    <RadioButton android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/radio_wholepath"
        android:id="@+id/radio_wholepath"/>"
</RadioGroup>
<EditText android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/edit_search"
    android:hint="@string/edit_search_hint"
    android:singleLine="true"/>"
</LinearLayout>
